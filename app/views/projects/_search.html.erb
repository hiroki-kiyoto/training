<form action="javascript:void(0)"></form>
    <%= form_tag "/projects/#{project.id}", :method => 'get' do %>
        <p>
            <%= label_tag(:tags_name_key, 'タグ検索：') %>
            <%= text_field_tag :tags_name_key,"", class: "uk-input uk-form-width-small"%>
            <%= button_tag :type => "submit" do %>
              <span class="uk-margin-small-right" uk-icon="search"></span>
            <% end %>
            <%= link_to "/projects/#{project.id}", method: :get do %>
              <span class="uk-margin-small-right" uk-icon="reply"></span>
            <% end %>
        </p>
    <% end %>
</form>
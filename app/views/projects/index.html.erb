<nav class="uk-navbar-container uk-margin" uk-navbar>
  <div class="uk-navbar-left">
    <a class="uk-navbar-item uk-logo" >プロジェクト一覧</a>
    <%= link_to "/", method: :get do %>
        <span class="uk-margin-small-left" uk-icon="home">ホームに戻る</span>
    <% end %>
  </div>
</nav>
<div class="uk-container uk-container-small">
  <% @projects.each do |project| %>
    <div class="uk-margin-medium uk-card uk-card-default uk-width-1@m">
      <div class="uk-card-header">
        <div class="uk-grid-small uk-flex-middle" uk-grid>
            <div class="uk-width-3-4">
              <h3 class="uk-card-title uk-margin-remove-bottom"><%= project.name %></h3>
            </div>
            <div class="uk-width-1-4">
              <ul class="uk-list">
                <li><%= link_to 'Show', "/projects/#{project.id}", class: "uk-button uk-button-text uk-card-footer-button" %></li>
                <li><%= link_to 'Edit', "/projects/#{project.id}/edit", class: "uk-button uk-button-text uk-card-footer-button" %></li>
                <li><%= link_to 'Destroy', "/projects/#{project.id}", method: :delete, data: { confirm: 'Are you sure?' }, class: "uk-button uk-button-text uk-card-footer-button" %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>